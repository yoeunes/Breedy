.tips
  font-size: 14px
  padding: 14px 20px
  border-radius 2px
  margin : 10px 0
  & span
    font-weight 700
    display: block
    margin-bottom 10px
  & p
    font-weight 400
    line-height: 1.3

  &--onlyTitle
    span
      margin-bottom: 0
      line-height: 1.3em
  &--infos
    background-color: alpha($cBlue, 0.15)
    color: $cBlue
    box-shadow: inset 4px 0 0 0 $cBlue
  &--warning
    background-color: alpha($cWarning, 0.15)
    color: $cWarning
    box-shadow: inset 4px 0 0 0 $cWarning
  &--success
    background-color: alpha($cSuccess, 0.15)
    color: $cSuccess
    box-shadow: inset 4px 0 0 0 $cSuccess


.middle
  width: 50%



