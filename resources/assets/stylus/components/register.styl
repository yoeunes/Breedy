[v-cloak] {display: none}

.register-page
  background #252E42
  background-image: url('/img/bg-register.jpg')
  background-position center center
  background-repeat no-repeat
  background-size cover

  .card-header
    display: none

  .register
    &__container
      @extend .containerGlobal
      position: absolute
      top 50%
      left: 0
      right: 0
      transform translateY(-50%)
      margin-left auto
      margin-right auto
      & a
        &:hover
          cursor: pointer
          color: $cWhite
    &__title
      color $cWhite
      font-size s(26)
      text-align: center
      margin-bottom s(6, 26)
    &__login
      display: block
      color $cWhite
      font-size s(18)
      font-weight 300
      text-align: center
      & a
        font-weight: 500
        &:hover, &:focus
          text-decoration underline

    &__form-container
      max-width s(732)
      width col(8, 12)
      margin s(40) auto 0

    &__form
      background $cWhite
      border-radius s(6)
      padding s(40) col(1,12)
      &__terms
        margin-top s(20)
        position relative
        & a
          font-weight 900
          &:hover,&:focus
            text-decoration underline
            color: $cBlue
      &__title
        display: block
        font-weight: 900
        color $cBlack
        font-size s(24)
        letter-spacing 1.37px
        margin-bottom s(30, 24)
        text-align: center

      &__button
        margin-top s(30)
        text-align center
  
      &__label
        display: block
        color $regularText
        font-size s(14)
        font-weight: 700
        margin-bottom s(7, 14)

      &__row
        display: flex
        justify-content: space-between
        margin-bottom s(5)

      &__group
      .el-form-item
        width 48%
        margin-bottom 10px
      &__select
        width 100%



  .register__form__group
    position: relative
  
  .el-button--medium
    padding: s(10,14) s(40,14)
  .login
    &__form-container
      width: col(5,12)
    &__form
      &__button
        & a
          display: block
          font-size: s(12)
          color: $cBlue
          &:hover
            color: $cBlue
      &__error
        position: relative
      &__row
        justify-content: center
        .el-form-item
          width 100%
  .reset-input
    width: 70%
  .reset
    &__password
      justify-content: center
  
  .password
    &__form
      width: 70%
      margin: 0 auto
      &__row
        flex-direction column
        justify-content: center
        align-items: center


  
